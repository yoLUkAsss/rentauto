<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="ar.edu.unq.epers.model.Categoria" table="categoria">
        <id name="id" type="java.lang.Integer">
            <column name="categoria_id" />
            <generator class="identity" />
        </id>
        
        <property name="nombre" type="string">
        	<column name="categoria_nombre" length="30">
        	</column>
        </property>
        
        <subclass name="ar.edu.unq.epers.model.Turismo">
        	<property name="categoria_nombre" />
        </subclass>
        
        <subclass name="ar.edu.unq.epers.model.Familiar">
        	<property name="categoria_nombre" />
        </subclass>
        
        <subclass name="ar.edu.unq.epers.model.Deportivo">
        	<property name="categoria_nombre" />
        </subclass>
        
        <subclass name="ar.edu.unq.epers.model.TodoTerreno">
        	<property name="categoria_nombre" />
        </subclass>
    </class>
</hibernate-mapping>